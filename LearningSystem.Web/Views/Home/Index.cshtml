@model IEnumerable<CourseListingServiceModel>

@{
    ViewData["Title"] = "Active Courses";
}

<div class="jumbotron home-jumbotron">
    <h1 class="text-center">Welcome to our learning system!</h1>
</div>

<div class="row home-page">
    @foreach (var course in Model)
    {
        <div class="col-md-4">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@course.Name</h3>
                </div>
                <div class="panel-body">
                    <img src="https://picsum.photos/200/200?guid=@(Guid.NewGuid())" class="img-responsive"/>
                    <br />
                   @course.StartDate.ToShortDateString() - @course.EndDate.ToShortDateString()
                </div>
            </div>
        </div>
    }
</div>
